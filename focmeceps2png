#!/usr/bin/bash
#
# Converts eps files generated by focmec to nice png files
#
# R.C. Stewart 8-May-2022

for file in *.eps
do
    echo "$file"
    cp "$file" tmp.eps
    magick convert -density 300 tmp.eps -trim -background white -alpha remove -bordercolor white -border 100 tmp.png
    mv -- tmp.png "${file%.eps}.png"
    rm tmp.*
done


